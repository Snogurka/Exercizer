<!-- entry section date part -->
<!-- entryOutput comes from history.ejs -->
<section class="workoutEntry">
  <button class="roll" type="button" onclick="displaySection(event.target)">-</button>

  <!-- date is extracted from Mongo (accurate) and passed from histories.js via outputSet:entries to history.ejs then via  entryOutput:entry to this file, histEntry.ejs; this date is now converted to string using toUTCString() so that the proper date is shown, as opposed to previous date, time stamp is dropped using RegEx-->
  <% let dt = new Date(entryOutput.entryDate).toUTCString().split(/ \d\d:/g)[0];
  let myDt = new Date(dt);
  let shortDt = myDt.getFullYear() + '-' + ('0' + (myDt.getMonth()+1)).slice(-2) + '-' + ('0' + myDt.getDate()).slice(-2); %>

  <div class="lblRow col2">
    <label for="entryDate" class="lblRow histLook">Date</label>
  </div>
  <div class="row col2">
    <!-- store date value as a short string needed for editing -->
    <input name="entryDate" class="histElt hidden" value="<%= shortDt %>" readonly>

    <input class="histElt displayDate" value="<%= dt %>" readonly>

    <button class="more hidden" type="button" onclick="deleteEntry(event.target)">delete</button>

    <!-- entry id, unique, generated by MongoDB, used here to delete or edit entries -->
    <input type="hidden" class="deleteID" value="<%= entryOutput._id %> ">
  </div>
  <!-- todo: check if there is more than one entry for the day -->
  <!-- reminder: entryOutput comes from history.ejs -->
  
  <% for (let i = 0; i < entryOutput.muscleGroup.length; i++) {  %>
      <%- include("histWorkoutEntry.ejs", {counter: i}) %> 
  <% } %>

</section>