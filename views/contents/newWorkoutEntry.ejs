<!-- new entry section -->
<div class="workoutSubEntry">
  <div class="row">
    <label for="muscleGroup" class="col4">Muscle Group</label> 
    <input type="text" name="muscleGroup" class="col2_75" autocomplete="on" required>
    <label for="activity" class="col2_5">Activity</label>
    <input type="text" name="activity" class="col2_75" autocomplete="on" required>
  </div>

  <!-- the following emoji buttons should show up when user enables emojis; they allow quick entry of muscle and activity -->
  <div id="emojRow" class="row hidden" onclick="emojResponse(event.target)">
    <div class="col7 muscles">
      <button type="button" class="emoj">💪</button>
      <button type="button" class="emoj">🦵</button>
      <button type="button" class="emoj">🫀</button>
      <button type="button" class="emoj">🧠</button>
    </div>
    <div class="col5 activities">
      <button type="button" class="emoj">🏊‍♂️</button>
      <button type="button" class="emoj">🏋️‍♀️</button>
      <button type="button" class="emoj">🤼</button>
      <button type="button" class="emoj">🏈</button>
    </div>
  </div>

  <div class="row">
    <label for="weight" class="col4">Weight (lbs)</label>
    <input type="number" class="col1_5" step="0.1" name="weight" min="0">

    <label for="sets" class="col1_5">Sets</label>
    <input type="number" class="col1_5" step="0.1" name="sets" min="0">

    <label for="reps" class="col2">Reps</label>
    <input type="number" class="col1_5" step="0.1" name="reps" min="0">
  </div>

  <div class="row">
    <label for="comments" class="col4">Comments</label>
    <textarea name="comments" rows="2" class="col8"></textarea>
  </div>

  <hr>
  <!-- a more or less buttons section under a line -->
  <div class="row">
    <button class="more col6" type="button" onclick="moreEntries(event.target)">+☟</button>
    <button class="more col6 hidden" type="button" onclick="lessEntries(event.target)">-☝</button>
  </div>
</div>
